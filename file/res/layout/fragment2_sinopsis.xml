<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutKnight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/KnightSinopsis"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:src="@drawable/knightsinopsis">
        </ImageView>

        <TextView
            android:id="@+id/sinopsisKnight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Sinopsis_knight"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/GateSinopsis"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:src="@drawable/gatesinopsis">
        </ImageView>

        <TextView
            android:id="@+id/sinopsisGate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Sinopsis_gate"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHorizon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/HorizonSinopsis"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:src="@drawable/horizonsinopsis">
        </ImageView>

        <TextView
            android:id="@+id/sinopsisHorizon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Sinopsis_horizon"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutKonosuba"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/KonosubaSinopsis"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:src="@drawable/konosubasinopsis">
        </ImageView>

        <TextView
            android:id="@+id/sinopsisKonosuba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Sinopsis_konosuba"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSmartphone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/SmartphoneSinopsis"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:src="@drawable/smartphonesinopsis">
        </ImageView>

        <TextView
            android:id="@+id/sinopsisSmartphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Sinopsis_smartphone"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutIruma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Irumasinopsis"
            android:layout_width="410dp"
            android:layout_height="300dp"
            android:src="@drawable/irumasinopsis">
        </ImageView>

        <TextView
            android:id="@+id/sinopsisIruma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Sinopsis_iruma"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
